<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_click_activity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_click_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_100"
            android:fontFamily="@font/nanumgothic"
            android:textStyle="italic"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/btn_click_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="@string/click_buttom"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_80"
        android:background="@drawable/circle_button"
        android:layout_marginTop="@dimen/dp_20"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_120"
        android:fontFamily="@font/bhanschrift"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>